<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-3 mt-3">
      <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377; <%= listing.price %>/Night
          <br />
          <%= listing.location %>
          <br />
          <%= listing.country %>
        </p>
      </div>
    </div>

    <div class="btns col-1 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn"
        >Edit</a
      >

      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
    <hr class="mt-3" />
    <div>
      <h4 class="col-8 offset-3 mt-3">Leave a Review</h4>
      <form
        method="post"
        action="/listings/<%= listing.id %>/reviews"
        class="col-8 offset-3"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label"> Rating </label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]"
          class="form-control form-range"" />
        </div>

        <div class="mt-3 mb-3">
          <label for="comment" class="form-label"> comments </label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
          ></textarea>
        </div>
        <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>
      </form>
    </div>
  </div>
</body>
